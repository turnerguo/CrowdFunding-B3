<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_CROWDFUNDINGINFO</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2010 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.0</version>
    <creationDate>31 March, 2013</creationDate>
    <description>PLG_CONTENT_CROWDFUNDINGINFO_DESC</description>
    
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_content_crowdfundinginfo.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_content_crowdfundinginfo.sys.ini</language>
    </languages> 
    
    <files>
        <filename plugin="crowdfundinginfo">crowdfundinginfo.php</filename>
        <filename>index.html</filename>
        <filename>style.css</filename>
    </files>
    
    <help url="PLG_CONTENT_CROWDFUNDINGINFO_HELP_URL"/>
    
    <config>
		<fields name="params">
			<fieldset name="basic">
                <field name="display_dates" type="radio" default="0" label="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_PERIOD" description="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_PERIOD_DESC" >
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
                
                <field name="display_location" type="radio" default="0" label="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_LOCATION" description="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_LOCATION_DESC" >
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
                <field name="display_map" type="radio" default="0" label="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_MAP" description="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_MAP_DESC" >
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
			</fieldset>
	            
            <fieldset name="advanced">
            
                <field name="google_maps_key" type="text" default="" size="60" label="PLG_CONTENT_CROWDFUNDINGINFO_GOOGLE_MAP_KEY" description="PLG_CONTENT_CROWDFUNDINGINFO_GOOGLE_MAP_KEY_DESC" />
                <field name="google_maps_width" type="text" default="300" label="PLG_CONTENT_CROWDFUNDINGINFO_GOOGLE_MAP_WIDTH" description="PLG_CONTENT_CROWDFUNDINGINFO_GOOGLE_MAP_WIDTH_DESC" />
                <field name="google_maps_height" type="text" default="300" label="PLG_CONTENT_CROWDFUNDINGINFO_GOOGLE_MAP_HEIGHT" description="PLG_CONTENT_CROWDFUNDINGINFO_GOOGLE_MAP_HEIGHT_DESC" />
                
                <field name="load_css" type="radio" default="1" label="PLG_CONTENT_CROWDFUNDINGINFO_LOAD_STYLE_CSS" description="PLG_CONTENT_CROWDFUNDINGINFO_LOAD_STYLE_CSS_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            
        </fields>
	</config>
</extension>
