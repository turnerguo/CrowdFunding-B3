<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_CROWDFUNDINGUSERMAIL</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2014 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.6.1</version>
    <creationDate>10 March, 2014</creationDate>
    <description><![CDATA[
    <p>CrowdFunding - User Mail is a plugin that sends confirmation mails to users.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/e-commerce/donations/23876" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <help url="PLG_CONTENT_CROWDFUNDINGUSERMAIL_HELP_URL"/>
    
    <files>
        <filename plugin="crowdfundingusermail">crowdfundingusermail.php</filename>
        <filename>index.html</filename>
        
        <folder>language</folder>
    </files>
    
    <config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_crowdfunding/models/fields">
                
                <field name="send_when_approved" type="cfemails" default="0" label="PLG_CONTENT_CROWDFUNDINGUSERMAIL_SEND_WHEN_APPROVED" description="PLG_CONTENT_CROWDFUNDINGUSERMAIL_SEND_WHEN_APPROVED_DESC"  />
                
                <field name="email_mode" type="list" default="html" label="PLG_CONTENT_CROWDFUNDINGUSERMAIL_EMAIL_MODE" description="PLG_CONTENT_CROWDFUNDINGUSERMAIL_EMAIL_MODE_DESC" >
                   <option value="plain">PLG_CONTENT_CROWDFUNDINGUSERMAIL_PLAIN</option>
                   <option value="html">PLG_CONTENT_CROWDFUNDINGUSERMAIL_HTML</option>
                </field>
                
			</fieldset>
	            
        </fields>
	</config>
</extension>
